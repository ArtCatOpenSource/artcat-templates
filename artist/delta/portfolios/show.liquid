<div class="column full-width">
  <h1>{{ portfolio.name | escape}}</h1>
</div>

{% if portfolio.has_description? %}
  <div class="column">
    {{ portfolio.description | textilize }}
  </div>
{% endif %}

{% if portfolio.has_press? %}
  <div class="column">
  {% if portfolio.has_press? %}
    <h2>Press</h2>
    {% for press_item in portfolio.press_items %}
      <a class="list-item" href="{{ press_item.page_url }}">
        <h3>{{ press_item.title | escape }}{% if press_item.display_date != empty %}, {{ press_item.display_date }}{% endif %}</h3>
      </a>
    {% endfor %}
  {% endif %}
  </div>
{% endif %}

<div class="column full-width">
{% for work in works %}
	<div class="image-set grid-item">
    {% if lightbox %}
      {{ work.featured_image | responsive_image_xlarge }}"
    {% else %}
    <a href="{{ work.page_url }}">
			<img src="{{ work.featured_thumb_url }}" alt="{{ work.title | escape }}" >
    </a>
    {% endif %}
    <p>{{ work.title | escape }}</p>
  </div>
{% endfor %}
</div>

{% if lightbox %}
<div class="lightbox">
	<div class="background"></div>
	<div class="container">
		<div class="direction prev">
			<div class="cross"></div>
		</div>
		<div class="direction next">
			<div class="cross"></div>
			<div class="plus"></div>
		</div>
		<div class="counter"></div>
		<div class="exit">
			<div class="cross"></div>
			<div class="plus"></div>
		</div>
		<img class="current-image" src="">
		<div class="lightbox-caption"></div>
	</div>
</div>
{% endif %}