<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<title>{{ website_title | escape }} {% if page_title %} - {{ page_title | escape }} {% endif %}</title>
  <meta name="author" content="www.artcat.com">
  <meta name="description" content="{{ website_description | escape }}">
  <meta name="keywords" content="{{ website_keywords | escape }}">
  {% if website.favicon_url %}	
  <link rel="shortcut icon" href="{{ website.favicon_url }}">
  {% else %}
  <link rel="shortcut icon" href="/favicon.ico">
  {% endif %}
  <script src="http://assets-p.artcat.com/modernizr-2.5.3.min.js" type="text/javascript"></script>
	<link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <link rel="alternate" type="application/rss+xml"  title="RSS"  href="/feed.rss" />
  {% client_css %}
  {% if theme_customize %}
  <style>
  body {
    color: {{ theme_customize.body_color }}; 
    background-color: {{ theme_customize.background_color }};
    font: {{ theme_customize.body_size }}px {{ theme_customize.body_font }}
  }
  #breadcrumb { color: {{ theme_customize.body_color }} }
  h1.logo { font: bold {{ theme_customize.title_size }}px {{ theme_customize.title_font }};}
  h1.logo a { color: {{ theme_customize.title_color }} }
  ul#navigation li a, ul#navigation li a:visited { 
    color: {{ theme_customize.nav_link_color }}; 
    font: normal  {{ theme_customize.nav_link_size }}px {{ theme_customize.nav_link_font }} 
  }
  ul#navigation li a.selected, ul#navigation li a:visited.selected { color: {{ theme_customize.active_nav_color }} }
  h3, #static h3 { font: bold {{ theme_customize.header_size }}px {{ theme_customize.header_font }}; color: {{ theme_customize.header_color }} }
  a:link, a:visited, a:active { color: {{ theme_customize.link_color }} }
  a:hover { color: {{ theme_customize.link_hover_color }} }
  </style>
  {% endif %}
</head>
<body class="{{ body_class }}">
	  <!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->
		<header>
		  {% if website.logo_url %}
		  <div id="header-container" class="logo-image">
		  	<h1 class="logo"><a href="/"><img src="{{ website.logo_url}}" alt="{{ website_title | escape }}" /></h1>
		  {% else %}
		  <div id="header-container">
		  	<h1 class="logo"><a href="/">{{ website_title | escape }}</a></h1>
		  {% endif %}			  
			  {% client_navigation %}
			</div>
		</header>

		<div id="main">				
      {{ content_for_layout }}
		</div>

		<footer class="clearfix">
      <div class="footer-container">			
  			<div class="left-footer">{{ website_footer }}</div>
  			<div class="right-footer">Powered by <a class="artcat" href="{{ referral_link | escape }}">ArtCat</a></div>
      </div>
		</footer>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="/jquery-1.8.2.min.js"><\/script>')</script>
    <script src="http://assets-p.artcat.com/srcset.min.js" type="text/javascript"></script>
  	{% google_code %}
</body>
</html>
