<div id="breadcrumb">
  <a href="/image_sets">Image Sets</a> > <a href="{{ image_set.page_url}} ">{{ image_set.name | escape }}</a> {% if image.has_caption? %} > <h3>{{ image.caption | escape }}</h3>{% endif %}
</div>

<div id="work-detail">

  <div class="viewer">      
    <div class="prev">
      {% if prev %}
      <a href="{{ prev }}">Prev</a>
      {% endif %}
    </div>
    <div class="image-container clearfix">
      <div class="outer-center"> 
        <div class="inner-center">
          {{ image | responsive_image_xlarge }}
          {% if image.caption %}
          <p class="caption">{{ image.caption | textlize_inline }}</p>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="next">
      {% if next %}
      <a href="{{ next }}">Next</a>
      {% endif %}
    </div>
  </div>
</div>
