<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <title>{{ website_title | escape }} {% if page_title %} - {{ page_title | escape }} {% endif %}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="author" content="www.artcat.com" />
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">

    <meta name="description" content="{{ website_description | escape }}" />
    <meta name="keywords" content="{{ website_keywords | escape }}" />
    {% client_css %}
  </head>
  <body>
    <div id="Navigation"> 
      <div class="SiteName"><a href="/">{% if website.logo_url %} <img src="{{ website.logo_url}}" alt="{{ website_title | escape }}" />{% else %}{{ website_title | escape }}{% endif %}</a></div>

      <ul class="NavList">
        {% for nav in website.nav_links %}
          {% if nav.path == active_section %}
          <li class="CurrentPosition">
          {% else %}
          <li>
          {% endif %}
            <a href="{{ nav.path | escape }}">{{ nav.name | escape }}</a>
          </li>
        {% endfor %}
      </ul>

    </div>
    <div id="Content">
      {{ content_for_layout }}
    </div> <!-- id=Content -->

    <div id="Credits"> 
      <div class="ArtCatCredit">Powered by <a href="{{ referral_link | escape }}">ArtCat</a></div>
      <div class="copyright">{{ website_footer }}</div>
    </div>
    {% client_js %}
    {% google_code %}
  </body>
</html>

