{% if website.home_page_image_only? %}

<div class="image_area_full">
  {% if website.home_image %}
    <a href="{{ website.home_image_link }}">{{ website.home_image | responsive_image_xlarge }}</a>
    <div class="caption">
      {{ website.home_image.caption | textilize }}
    </div><!-- closes .caption -->
  {% endif %}
</div><!-- closes .image_area -->

{% else %}

<div class="image_area">
  {% if website.home_image %}
    <a href="{{ website.home_image_link }}">{{ website.home_image | responsive_image_large }}</a>
    <div class="caption">
      {{ website.home_image.caption | textilize }}
    </div><!-- closes .caption -->
  {% endif %}
</div><!-- closes .image_area -->

<div class="body_copy">

  {{ website.home_page_announcement | textilize }}

  {% for news in website.home_page_news %}
    {% if news.title %}
      <h4>{{ news.title }}</h4>
    {% endif %}
    {% if news.display_date %}
      <p class="news_date">{{ news.display_date }}</p>
    {% endif %}
  
    {% if news.summary %}
      {{ news.summary | textilize }}
    {% else %}
      {{ news.body.truncate(250) | textilize }}
    {% endif %}

    <p><a href="{{ news.page_url }}">More &raquo;</a></p>
  {% endfor %}

</div><!-- .body_copy -->

{% endif %}
